@model Soapure.Models.SoapMainIngredientViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Soaps" asp-action="Index" method="get">
    <p>
        <select asp-for="SoapMainIngredient" asp-items="Model.MainIngredient">
            <option value="">All</option>
        </select>
        Product Name: <input type="text" name="searchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].MainIngredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soaps[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Soaps) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainIngredient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
